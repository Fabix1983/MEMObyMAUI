<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MEMObyMAUI.Views.TabPage"
             xmlns:local="clr-namespace:MEMObyMAUI"
             Title="TabPage"
             BarBackgroundColor="#4D4F58"
             BarTextColor="White"
             SelectedTabColor="#eb0e63"
             UnselectedTabColor="Black"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             android:TabbedPage.ToolbarPlacement="Bottom">

    <local:DetailsPage Title="Home" IconImageSource="home.svg">
    </local:DetailsPage>
    <local:NewPage Title="New" IconImageSource="add.svg">
    </local:NewPage>
    <local:InfoAppPage Title="Info" IconImageSource="infoicon.svg">
    </local:InfoAppPage>

</TabbedPage>